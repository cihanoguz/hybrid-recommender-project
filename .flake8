[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info
ignore =
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator (conflicts with black)
    E203,  # whitespace before ':' (conflicts with black)
per-file-ignores =
    __init__.py:F401  # imported but unused (for package exports)

